{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "http:default",
    "fs:default",
    "opener:default",
    "os:allow-arch",
    "os:allow-platform",
    "shell:default",
    "upload:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "chmod+x",
          "cmd": "chmod",
          "args": [
            "+x",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    }
  ]
}
