{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "opener:default",
    "os:allow-arch",
    "os:allow-platform",
    "shell:default",
    "upload:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPLOCALDATA/**" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$APPLOCALDATA/**" }]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://test.net.0kn.io/*/client.toml"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "chmod+x",
          "cmd": "chmod",
          "args": [
            "+x",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "walletshield-listen",
          "cmd": "walletshield",
          "args": [
            "-listen",
            ":7070",
            "-config",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "walletshield-probe",
          "cmd": "walletshield",
          "args": [
            "-probe",
            "-config",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    }
  ]
}
